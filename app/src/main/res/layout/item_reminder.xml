<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtReminderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đi xem phim"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtReminderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mua bỏng, nước"
            android:textColor="#000"
            android:textSize="16sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/txtAddReminderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10/11/2024" />

            <TextView
                android:id="@+id/txtAddReminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7:00" />

            <TextView
                android:id="@+id/txtReminderCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Bạn bè"
                android:textColor="#0D79AE" />

        </TableRow>
    </LinearLayout>

</LinearLayout>